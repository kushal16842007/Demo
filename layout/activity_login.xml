<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:layout_gravity="center_horizontal"
    tools:context=".Login">

    <include
        android:id="@+id/title_bar"
        layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/pading_20dp"
        >

        <TextView
            android:id="@+id/txtViewNameOrEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_100dp"
            android:text="@string/name_email"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_20sp"

            />

        <EditText
            android:id="@+id/edtTextUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            android:inputType="textPersonName"
            android:drawablePadding="@dimen/pading_5dp"
            android:padding="@dimen/pading_5dp"
            />
        <TextView
            android:id="@+id/txtViewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20dp"
            android:text="@string/hint_password"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_size_20sp"
            android:drawablePadding="@dimen/pading_5dp"/>
        <EditText
            android:id="@+id/edtTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5dp"
            android:background="@drawable/rounded_edittext"
            android:drawableLeft="@drawable/ic_vpn_key_black_24dp"
            android:drawablePadding="@dimen/pading_5dp"
            android:inputType="textPassword"
            android:padding="@dimen/pading_5dp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/txtViewMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:text="@string/blank"
        android:textColor="@color/red"
        android:textSize="@dimen/txt_size_20sp"
       />


     <!-- <View style="@style/Divider"/> -->


    <Button
        android:id="@+id/btnLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_20dp"
        android:padding="@dimen/margin_10dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/hint_login"
        android:background="@drawable/rounded_button"/>
    <TextView
        android:id="@+id/txtViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_10dp"
        android:text="@string/underLine_signup"
        android:textSize="@dimen/txt_size_20sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"/>
</LinearLayout>
    </ScrollView>
</LinearLayout>